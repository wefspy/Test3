<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.CurProgSchedule">
    <StackLayout Orientation="Vertical">
        <Label Text="Текущая программа" FontSize="24" FontAttributes="Bold"
                       HorizontalOptions="Center" TextColor="Black" Margin="0,10,0,0"/>
        <ScrollView>
            <StackLayout Orientation="Vertical">
                <Label Text="Неделя 1" FontSize="18" Margin="20, 0" TextColor="Black" />
                <Image x:Name="week0" Margin="20,0,20,10"/>
                <Label Text="Неделя 2" FontSize="18" Margin="20, 0" TextColor="Black" />
                <Image x:Name="week1" Margin="20,0,20,10"/>
                <Label Text="Неделя 3" FontSize="18" Margin="20, 0" TextColor="Black" />
                <Image x:Name="week2" Margin="20,0,20,10"/>
                <Label Text="Неделя 4" FontSize="18" Margin="20, 0" TextColor="Black" />
                <Image x:Name="week3" Margin="20,0,20,0"/>
            </StackLayout>
        </ScrollView>
        <Button Text="Тренироваться" TextColor="#ffff" BackgroundColor="#1B8DEB" CornerRadius="20" HeightRequest="50" Margin="30,10,30,20"
                        FontSize="15" FontAttributes="Bold" Clicked="Button_Clicked"/>
    </StackLayout>
</ContentPage>